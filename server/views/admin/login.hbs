{{#if conocido}}
<p>Hola {{nombre}} </p>

{{/if}}
 {{#if mensaje}}
    <div class="alert">{{mensaje}}</div>
  {{/if}}

{{#unless conocido}}
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
            <div class="mt-4">

                <p class="text-center">Hola Logueate para Ingresar</p>
                <form class="form-control" action="" method="post">
                    <input class="form-control mt-4 mb-4" type="text" name="usuario" placeholder="Usuario" id="inputUser">
                    <input class="form-control mt-4 mb-4" type="password" name="password" placeholder="Contraseña"
                        id="inputPasssword">
                    <button class="btn btn-primary mt-2">Ingresar</button>
                </form>
            </div>
            <a href="/contacto">Contacto</a>
        </div>
    </div>
</div>
{{#if error}}
<p>Usuario y/o Contraseña Incorrectos</p>
{{/if}}

{{/unless}}