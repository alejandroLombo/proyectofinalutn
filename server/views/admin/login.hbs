{{#if conocido}}
<p>Hola {{nombre}} <a style="color: black;" href="/salir">Salir</a></p>

{{/if}}

{{#unless conocido}}
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
            <div class="mt-4">

                <p>Hola Logueate para Ingresar</p>
                <form class="form-control" action="" method="post">
                    <input class="form-control" type="text" name="usuario" placeholder="Usuario" id="inputUser">
                    <input class="form-control" type="password" name="password" placeholder="Contraseña"
                        id="inputPasssword">
                    <button class="btn btn-primary mt-2">Ingresar</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{#if error}}
<p>Usuario y/o Contraseña Incorrectos</p>
{{/if}}

{{/unless}}